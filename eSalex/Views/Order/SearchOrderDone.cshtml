@model IEnumerable<eSalex.Models.OrderViewModel>
@{
    ViewBag.Title = "訂單首頁";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>搜尋訂單</h4>
    <div>
        @using (Html.BeginForm("SearchOrderDone", "Order"))
        {
            <table class="table">
                <tr>
                    <td>訂單編號</td>
                    <td><input type="text" name="OrderId" id="OrderId" /></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>客戶名稱</td>
                    <td><input type="text" name="CustName" id="CustName" /></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>負責員工</td>
                    <td>@Html.DropDownList("EmpId",(SelectList)ViewBag.MyList, "----員工----", new { @class = "form-control" })</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>出貨公司</td>
                    <td>@Html.DropDownList("ShipperId",(SelectList)ViewBag.MyList, "----出貨公司----", new { @class = "form-control" })</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>訂購日期</td>
                    <td><input type="date" name="Orderdate" id="Orderdate" /></td>
                    <td>出貨日期</td>
                    <td><input type="date" name="ShippedDate" id="ShippedDate" /></td>
                </tr>
                <tr>
                    <td>需要日期</td>
                    <td><input type="date" name="RequiredDate" id="RequiredDate" /></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="查詢" class="btn btn-primary" />
                        <input type="reset" value="清空" class="btn btn-default" />
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>

        }
        <table class="table">
            <tr>
                <td>訂單編號</td>
                <td>客戶名稱</td>
                <td>訂購日期</td>
                <td>出貨日期</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var aa in Model)
            {
                <tr>
                    <td>@aa.OrderId</td>
                    <td>@aa.CustName</td>
                    <td>@aa.Orderdate</td>
                    <td>@aa.ShippedDate</td>
                    <td>@Html.ActionLink("修改", "UpdateOrder", new { id = aa.OrderId })</td>
                    <td>@Html.ActionLink("刪除", "DeleteOrder", new { id = aa.OrderId })</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
